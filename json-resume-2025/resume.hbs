      <!-- Â∑•‰ΩúÁ∂ìÈ©ó -->
      <section class="timeline">
        <h3>Career Journey</h3>
        {{#each resume.work}}
          <div class="timeline-item">
            <div class="timeline-content">
              <h3>{{this.name}}</h3>
              <p class="timeline-date">{{formatDate this.startDate}}
                -
                {{formatDate this.endDate}}</p>
              <p>{{this.position}}</p>
              <div class="highlights">
                {{#each this.highlights}}
                  <p>
                    <i class="fas fa-check"></i>
                    {{this}}
                  </p>
                {{/each}}
              </div>
            </div>
          </div>
        {{/each}}
      </section>
<!-- üìå Skills & Proficiency Table -->
<section class="skills-table-section">
  <h3>üìä Technical Proficiency</h3>
  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Skills</th>
      </tr>
    </thead>
    <tbody>
      {{#each resume.skills}}
      <tr>
        <td><strong>{{this.name}}</strong></td>
        <td>
          <ul>
            {{#each this.keywords}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>

    <!-- ÊïôËÇ≤ËÉåÊôØ -->
    <section class="education-section">
      <h3>üéì Education</h3>
      {{#each resume.education}}
        <div class="education-item">
          <h4>{{this.institution}}</h4>
          <p>{{this.area}} - {{this.studyType}}</p>
          <p>{{formatDate this.startDate}} - {{formatDate this.endDate}}</p>
          <p>{{this.summary}}</p>
        </div>
      {{/each}}
    </section>

    <!-- Ë≠âÊõ∏ -->
    <section class="certificates-section">
      <h3>üìú Certificates</h3>
      {{#each resume.certificates}}
        <div class="certificate-item">
          <h4>{{this.name}}</h4>
          <p>{{this.issuer}} - {{formatDate this.date}}</p>
          <a href="{{this.url}}" target="_blank">View Certificate</a>
        </div>
      {{/each}}
    </section>

    <!-- Â∞àÊ°à -->
    <section class="projects-section">
      <h3>üöÄ Projects</h3>
      {{#each resume.projects}}
        <div class="project-item">
          <h4>{{this.name}}</h4>
          <p>{{formatDate this.startDate}} - {{formatDate this.endDate}}</p>
          <p>{{this.summary}}</p>
          <ul>
            {{#each this.highlights}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </section>

    <!-- JavaScript -->
    <script>
      mermaid.initialize({ startOnLoad: true, theme: 'default' });
     document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById("skillsChart").getContext("2d");

    new Chart(ctx, {
      type: "radar",
      data: {
        labels: ["Security", "DevOps", "Cloud", "Software Development", "Research"],
        datasets: [
          {
            label: "Skill Level (0-10)",
            data: [9, 8, 8, 7, 6],
            backgroundColor: "rgba(0, 255, 255, 0.4)",
            borderColor: "#00ffff",
            pointBackgroundColor: "#ff00ff",
            pointBorderColor: "#fff",
            pointRadius: 5,
          },
        ],
      },
      options: {
        responsive: true,
        scales: {
          r: {
            grid: { color: "rgba(255, 255, 255, 0.2)" },
            ticks: { color: "#00ffff" },
            pointLabels: { color: "#ff00ff", font: { size: 14 } }
          }
        }
      }
    });
});

    </script>
  </body>
</html>